<launch>

  <!-- Arguments -->
  <arg name="chassis_model" default="$(optenv LINGAO_MODEL MiniUGV-20A)" doc="model type [MiniUGV-10A, MiniUGV-20A, LAUGV-50A ...]"/>

  <!-- Run ls laser drivers. -->
  <include file="$(find lslidar_driver)/launch/lslidar_c16.launch" />

  <!-- Run pointcloud to laserscan -->
  <include file="$(find pointcloud_to_laserscan)/launch/pointcloud_to_laserscan.launch" />

  <!-- Publish static transform of the laser. Define your sensor offset here -->
  <node pkg="tf2_ros" if="$(eval chassis_model == 'MiniUGV-20A-3D')" type="static_transform_publisher" name="base_link_to_laser" args="0.053 0 0.354 0 0 0  /base_link /laser_link"/>

</launch>
